{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and debug",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${relativeFile}",
				"-o",
				"${fileBasenameNoExtension}.out"
			]
		},

		{
			"label": "Compile and run",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${relativeFile}",
				"-o",
				"${fileBasenameNoExtension}.out",
				"&&",
				"clear",
				"&&",
				"./${fileBasenameNoExtension}.out"
			],

			"group": {
				"kind": "build",
				"isDefault": true
			},

			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceRoot}"],

				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}
